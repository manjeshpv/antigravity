<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fund Return</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            margin: 0;
            padding: 2rem 0;
            background-color: #f0f2f5;
            color: #333;
            box-sizing: border-box;
            overflow-y: auto;
        }

        .container {
            background: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 90%;
            width: 800px;
            margin: auto;
        }

        h1 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }
    </style>
</head>

<body>
    <div class="container">

        <a href="/?name=<%= userParams.name %>&date_of_birth=<%= userParams.dob %>&sip=<%= userParams.sip %>">&larr;
            Back to Dashboard</a>
        <hr style="margin: 2rem 0; border: 0; border-top: 1px solid #ddd;">

        <div class="dashboard">
            <h2>Investment Transactions (15 Years)</h2>
            <div class="controls" style="margin-bottom: 1rem;">
                <label for="accountSelect">Filter by Account: </label>
                <select id="accountSelect" style="padding: 0.5rem; border-radius: 4px; border: 1px solid #ccc;"
                    onchange="filterAccount(this.value)">
                    <option value="all" <%=selectedAccount==='all' ? 'selected' : '' %>>All Accounts</option>
                    <% accounts.forEach(acc=> { %>
                        <option value="<%= acc.id %>" <%=selectedAccount===acc.id ? 'selected' : '' %>><%= acc.name %>
                        </option>
                        <% }) %>
                </select>
            </div>

            <table id="txTable" style="width: 100%; border-collapse: collapse; text-align: left; font-size: 0.9rem;">
                <thead>
                    <tr style="background: #f8f9fa;">
                        <th style="padding: 10px; border-bottom: 2px solid #dee2e6;">Date</th>
                        <th style="padding: 10px; border-bottom: 2px solid #dee2e6;">Account</th>
                        <th style="padding: 10px; border-bottom: 2px solid #dee2e6;">Description</th>
                        <th style="padding: 10px; border-bottom: 2px solid #dee2e6; text-align: right;">Amount</th>
                        <th style="padding: 10px; border-bottom: 2px solid #dee2e6; text-align: right;">Balance</th>
                    </tr>
                </thead>
                <tbody>
                    <% let runningBalance=0; const accountMap={}; accounts.forEach(acc=> accountMap[acc.id] = acc.name);

                        transactions.forEach(tx => {
                        runningBalance += tx.amount;
                        let accName = accountMap[tx.accountId] || tx.accountId;
                        let desc = tx.description;
                        if (tx.relatedAccountId) {
                        const rName = accountMap[tx.relatedAccountId] || tx.relatedAccountId;
                        desc += ` <span style="font-size: 0.8em; color: #888;">(Ref: ${rName})</span>`;
                        }
                        %>
                        <tr style="border-bottom: 1px solid #eee;">
                            <td style="padding: 8px;">
                                <%= tx.date %>
                            </td>
                            <td style="padding: 8px; color: #666;">
                                <%= accName %>
                            </td>
                            <td style="padding: 8px;"><%- desc %></td>
                            <td
                                style="padding: 8px; text-align: right; color: <%= tx.amount >= 0 ? 'green' : 'red' %>;">
                                <%= utils.formatCurrency(tx.amount) %>
                            </td>
                            <td style="padding: 8px; text-align: right; font-weight: bold;">
                                <%= utils.formatCurrency(runningBalance) %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function filterAccount(account) {
            const url = new URL(window.location.href);
            url.searchParams.set('account', account);
            window.location.href = url.toString();
        }
    </script>
</body>

</html>